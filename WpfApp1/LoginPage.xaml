<Page x:Class="WpfApp1.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" Margin="319,163,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="User Name" HorizontalAlignment="Left" Margin="319,141,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.667,-0.756" FontFamily="Verdana"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="319,225,0,0" VerticalAlignment="Top" Width="75" FontFamily="Verdana"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="23" Margin="319,256,0,0"  VerticalAlignment="Top" Width="120"/>
        <Label Content="Elegant Orchids" HorizontalAlignment="Left" Margin="281,68,0,0" VerticalAlignment="Top" Width="186" Height="41" FontFamily="Verdana" FontSize="20"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="342,317,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.107,0.317" FontFamily="Verdana" Click="OnLogInClick"/>

    </Grid>
</Page>
